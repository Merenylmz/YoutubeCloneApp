<%- include('partials/head') %>

<body>
    <%- include('partials/navbar') %>
    <div class="container mt-3">
        <h3 style="text-align: center;"><%= category.name %></h3>
        <hr>
        <br>
        <p style="text-align: center; margin-bottom: 35px;"><%= videos.length %> Video Bulundu.</p>
        <div class="row">
            <% videos.forEach(video => { %>
                <div class="col-sm-4 mb-3 mb-sm-0">
                    <a href="/details/<%= video._id %>" style="text-decoration: none;">
                        <div class="card" style="height: 320px; margin-bottom: 10px;">
                            <img src="<%= video.videoContentImageUrl %>" style="height: 220px;" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title"><%= video.title %></h5>
                                <p class="card-text"><%= video.description %></p>
                            </div>
                        </div>
                    </a>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>